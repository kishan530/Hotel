{% extends 'page.html.twig' %}

{% block breadcrumbsTitle %}Add Coupons{% endblock %}

{% block breadcrumbsLinks %}
            <li><a href="{{ path('room_booking_engine_homepage') }}">Home</a></li>
            <li><a href="{{ path('room_site_management_about_us') }}">Add Hotel</a></li>
{% endblock %}


{% block body %}

<div class="container">
<h1 class="page-header">Add Coupon Details</h1>
{{ form_start(form) }}

	<div class="row">
		<div class="col-lg-6">
			 <div class="row form-group">
                            <div class="col-lg-12">
                            	{{ form_label(form.couponName) }}
                                {{ form_widget(form.couponName) }}
                            </div> 
                                                    
                    </div>
              <div class="row form-group">
                            <div class="col-lg-12">
                            	{{ form_label(form.couponCode) }}
                                {{ form_widget(form.couponCode) }}
                            </div> 
                                                    
                    </div>
                    
               <div class="row form-group">
                            <div class="col-lg-12">
								{{ form_label(form.expireDate) }}
								<span class="calendar">
				{{ form_widget(form.expireDate,{ 'attr': {'class': 'form-control date-pick '}} ) }}
								</span>
                            </div> 
                                                    
                    </div>  
                    

                     <div class="row form-group">
                            <div class="col-lg-12">
                            	{{ form_label(form.amount) }}
                                {{ form_widget(form.amount) }}
                            </div> 
                                                    
                    </div>
                    
                    
                   
                    
                 
                    
                
               
			
		</div>
	</div>

	
{{ form_end(form) }}
</div>

{% endblock %}
